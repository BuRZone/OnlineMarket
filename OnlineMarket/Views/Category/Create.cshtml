@using OnlineMarket.BLL.ViewModels.Category;

@model CategoryVM

<p>Create new Category</p>

<form asp-action="Create" method="post">

    <div asp-validation-summary="ModelOnly" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.CategoryName" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.CategoryName">
            <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label for="exampleSelect2" class="col-form-label">Exist Categories</label>
            <select multiple="" class="form-select" id="exampleSelect2" asp-items="ViewBag.Category"></select>
        </div>
    </div>
    <p></p>
    <button class="btn btn-primary">Отправить</button>
</form>